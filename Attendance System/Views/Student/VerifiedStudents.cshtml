<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="AttendanceReportForm" >Attendance Report</a> | 
                    <a asp-controller="Student" asp-action="CreatePDF" asp-route-id="@item.ID" class="btn btn-danger">Verify</a>

                </td>
            </tr>
        }
    </tbody>
</table>
